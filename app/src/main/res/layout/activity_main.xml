<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codepeaker.myappportfoilio.MainActivity">
    <TextView
        android:gravity="center_horizontal"
        android:layout_width="@dimen/width_200"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="@string/my_nanodegree_apps"
        android:textSize="@dimen/text_20"/>
    <Button
        android:id="@+id/popular_movies"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="@dimen/width_200"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/popular_movies" />

    <Button
        android:id="@+id/stock_hawk"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="@dimen/width_200"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/stock_hawk" />

    <Button
        android:id="@+id/bulid_it_bigger"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="@dimen/width_200"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/build_it_bigger" />

    <Button
        android:id="@+id/make_your_app_material"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="@dimen/width_200"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/make_your_app_material" />

    <Button
        android:id="@+id/go_ubiquitous"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="@dimen/width_200"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/go_ubiquitous" />

    <Button
        android:id="@+id/capstone"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_width="@dimen/width_200"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/capstone" />
</LinearLayout>